@article{abu-lughodMulheresMuculmanasPrecisam2012,
  title = {As Mulheres Mu{\c c}ulmanas Precisam Realmente de Salva{\c c}{\~a}o?: Reflex{\~o}es Antropol{\'o}gicas Sobre o Relativismo Cultural e Seus Outros},
